{
  "exclude": ["coverage/**/*", "./lib", "jest.config.js", "jest.e2e.config.js"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      "jest",
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "__tests__/**/*",
    "jest.config.js",
    "jest.e2e.config.js",
  ]
}
